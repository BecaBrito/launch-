//Exercício 4
function dobro(a) {
  return a*2
}
console.log(dobro(11))


//Exercício 5
function verificarMaiorIdade(idade) {
    if (idade >= 18) {
        console.log("É maior de idade.");
    } else {
        console.log("É menor de idade.");
    }
}
verificarMaiorIdade(20)
verificarMaiorIdade(17)
verificarMaiorIdade(18)


