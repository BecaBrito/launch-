//arays ou lista
//declaração de arrays


//             0        1          2         3
let cores =['Azul', 'Amarelo', 'Vermelho', 'Verde']
console.log(cores)

//acessar item lista
console.log(cores[0])

//propriedade length
console.log(cores.length) //4
let ultimoElemento = cores[cores.length -1] //3
console.log(ultimoElemento)

//adiionar elementos 
const notas = [10, 6, 8,]
//push - adicionar elementos no final do array
notas.push(9)
console.log(notas)

//unshift - adiciona elementos no ínico do array
notas.unshift(5)
console.log(notas)

//deletendo itens do array
//pop - deletar o último item do array
notas.pop()
console.log(notas)

//shift - deleta o primeiro item da lista
notas.shift()
console.log(notas)

//método slice- Extrai uma parte do array sem modificar o original
//slice(ínicio, fim)
const listaDeEstudantes =['João', 'Juliana', 'Ana', 'Caio', 'Lara', 
    'Aline', 'Guilherme', 'Carlos', 'Paulo', 'Renata'
]
console.log(listaDeEstudantes)

const sala1 = listaDeEstudantes.slice(0,listaDeEstudantes.length/2) //5
const sala2 = listaDeEstudantes.slice(listaDeEstudantes.length/2)
console.log (sala1)
console.log (sala2)


//splice(ínicio, quntidade, elemento a ser adicionado), substitui elementos da lista
sala2.splice(2, 2, 'Maria')
console.log(sala2)


//concatenar listas
const salaJs = ['Alice','Melissa']
const salaPython = ['Malu', 'Isabela','Gabi(s)','Sofia']

const salasUnidas =salaJs.concat(salaPython)
console.log(salasUnidas)


//lista de listas
const alunos = ['Bia', 'Camila', 'Maria', 'Gabrielo']
const media = [10,5,6,8]
const lista = [alunos, media]

//jeito da professora
console.log(`A aluna no índice 2 se chama ${lista[0][1]} e sua média é ${lista[1][1]}`)

//meu jeito
console.log('A aluna no índice 0 se chama', alunos[0], 'e sua média é', media[0])
console.log('A aluna no índice 1 se chama', alunos[1], 'e sua média é', media[1])
console.log('A aluna no índice 2 se chama', alunos[2], 'e sua média é', media[2])
console.log('A aluna no índice 3 se chama', alunos[3], 'e sua média é', media[3])
